{
  "name": "halom-protocol",
  "version": "1.0.0",
  "description": "Halom Protocol - Fourth root based DeFi system",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy_testnet.js --network zkSyncTestnet",
    "deploy:sepolia": "npx hardhat run scripts/deploy_testnet.js --network sepolia",
    "deploy:arbitrum": "npx hardhat run scripts/deploy_testnet.js --network arbitrumSepolia",
    "deploy:polygon": "npx hardhat run scripts/deploy_testnet.js --network polygonZkEVMTestnet",
    "deploy:governance": "npx hardhat run scripts/deploy_governance.js --network localhost",
    "setup:staking": "npx hardhat run scripts/setup_mainnet_staking.js --network localhost",
    "verify:testnet": "npx hardhat verify --network zkSyncTestnet",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "lint:js": "npx eslint scripts/**/*.js test/**/*.js hardhat.config.js --max-warnings=0",
    "lint:js:fix": "npx eslint scripts/**/*.js test/**/*.js hardhat.config.js --fix",
    "format": "npx prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "format:check": "npx prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "docgen": "npx hardhat docgen",
    "gas-report": "npx hardhat test --gas-report",
    "security-check": "npx hardhat test test/security-audit-tests.cjs",
    "test:security": "npx hardhat test test/security-audit-tests.js",
    "test:oracle": "npx hardhat test test/test-oracle.js",
    "test:staking": "npx hardhat test test/test-staking.js",
    "test:token": "npx hardhat test test/test-token.js",
    "test:lp-staking": "npx hardhat test test/test-lp-staking.js",
    "test:governance": "npx hardhat test test/test-governance.js",
    "upgrade:contracts": "npx hardhat run scripts/upgrade_contracts.js --network localhost",
    "upgrade:testnet": "npx hardhat run scripts/upgrade_contracts.js --network zkSyncTestnet",
    "oracle:update": "python offchain/oracle_updater_v2.py",
    "oracle:enhanced": "python offchain/enhanced_updater.py",
    "oracle:setup": "bash offchain/cron_setup.sh"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.14.4",
    "node-schedule": "^2.1.1",
    "web3": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.13",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "eslint": "^9.30.0",
    "globals": "^15.12.0",
    "hardhat": "^2.22.1",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.2",
    "solidity-coverage": "^0.8.5"
  }
}
