{
  "name": "halom",
  "version": "1.0.0",
  "description": "Halom - DeFi Protocol with zkSync Integration",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:comprehensive": "node scripts/testing/run-comprehensive-tests.js",
    "test:unit": "hardhat test tests/test-*.cjs",
    "test:integration": "hardhat test tests/test-*-complete-flow.cjs tests/test-*-comprehensive.cjs",
    "test:security": "hardhat test tests/test-secure-roles.cjs tests/test-critical-fixes.cjs tests/security-audit-tests.cjs",
    "test:zksync": "hardhat test tests/zksync-integration.test.cjs tests/test-oracle-v2-comprehensive.cjs",
    "test:coverage": "hardhat coverage",
    "test:gas": "hardhat test tests/test-gas-optimization.cjs",
    "test:fuzz": "forge test --fuzz",
    "test:slither": "slither . --exclude-dependencies --exclude-informational --exclude-low",
    "test:mythril": "myth analyze contracts/ --execution-timeout 300",
    "test:all": "npm run test:comprehensive && npm run test:coverage && npm run test:slither",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:testnet": "hardhat run scripts/deploy/deploy_testnet.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy/deploy.js --network mainnet",
    "verify:testnet": "hardhat verify --network goerli",
    "verify:mainnet": "hardhat verify --network mainnet",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "security:audit": "npm run test:slither && npm run test:mythril && npm run test:security",
    "security:check": "npm run test:all",
    "docs:generate": "hardhat docgen",
    "docs:serve": "npx http-server docs/",
    "offchain:test": "cd offchain-scripts && python -m pytest",
    "offchain:run": "cd offchain-scripts && python oracle_updater.py",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "defi",
    "zksync",
    "ethereum",
    "smart-contracts",
    "governance",
    "staking",
    "oracle",
    "bridge"
  ],
  "author": "Halom Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "chai": "^4.5.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^2.0.0",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halom/halom.git"
  },
  "bugs": {
    "url": "https://github.com/halom/halom/issues"
  },
  "homepage": "https://halom.io",
  "config": {
    "testTimeout": 300000,
    "coverageThreshold": 95,
    "gasLimit": 30000000
  }
}
