# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Network to deploy to (hardhat, localhost, sepolia, zkSyncTestnet, etc.)
DEPLOY_NETWORK=zkSyncTestnet

# Gas settings
GAS_LIMIT=3000000
GAS_PRICE=1000000000

# =============================================================================
# GOVERNANCE CONFIGURATION
# =============================================================================

# Multisig wallet address (for timelock admin role)
MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# Timelock delay (in seconds)
TIMELOCK_MIN_DELAY=86400

# Voting settings
GOVERNANCE_VOTING_DELAY=1
GOVERNANCE_VOTING_PERIOD=45818
GOVERNANCE_PROPOSAL_THRESHOLD=1000000000000000000000
GOVERNANCE_QUORUM_FRACTION=4

# =============================================================================
# TREASURY CONFIGURATION
# =============================================================================

# Fee distribution (in basis points)
TREASURY_STAKING_FEE=6000
TREASURY_LP_STAKING_FEE=2000
TREASURY_DAO_RESERVE_FEE=2000

# =============================================================================
# STAKING CONFIGURATION
# =============================================================================

# Lock boost parameters
STAKING_LOCK_BOOST_B0=2000
STAKING_LOCK_BOOST_TMAX=31536000
STAKING_MAX_COMMISSION=2000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Maximum rebase delta (in basis points, e.g., 500 = 5%)
MAX_REBASE_DELTA=500

# Reward rate (in basis points, e.g., 2000 = 20%)
REWARD_RATE=2000

# Anti-whale limits (as percentage of total supply)
MAX_TRANSFER_PERCENT=1
MAX_WALLET_PERCENT=2

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/halom.log

# Enable gas reporting
REPORT_GAS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable verbose logging
VERBOSE=false

# Test mode (skip actual deployments)
TEST_MODE=false

# Hardhat network settings
HARDHAT_NETWORK_ID=31337
HARDHAT_CHAIN_ID=31337 