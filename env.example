# =============================================================================
# Halom Protocol Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real private keys to version control!

# =============================================================================
# DEPLOYMENT KEYS (CRITICAL - Keep these secure!)
# =============================================================================

# Main deployment private key (for Ethereum networks)
PRIVATE_KEY=your_private_key_here

# zkSync specific private key (can be same as PRIVATE_KEY)
ZKSYNC_PRIVATE_KEY=your_zksync_private_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Default RPC URL (for local development)
RPC_URL=http://localhost:8545
CHAIN_ID=31337

# Ethereum Networks
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# zkSync Era Networks
ZKSYNC_TESTNET_RPC_URL=https://testnet.era.zksync.dev
ZKSYNC_MAINNET_RPC_URL=https://mainnet.era.zksync.io

# Other L2 Networks
POLYGON_ZKEVM_TESTNET_RPC_URL=https://rpc.public.zkevm-test.net
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# =============================================================================
# API KEYS FOR VERIFICATION
# =============================================================================

# Etherscan API Key (for Ethereum mainnet/sepolia)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Arbiscan API Key (for Arbitrum)
ARBISCAN_API_KEY=your_arbiscan_api_key

# =============================================================================
# ORACLE CONFIGURATION
# =============================================================================

# Oracle updater private key (can be same as PRIVATE_KEY for testing)
ORACLE_PRIVATE_KEY=your_oracle_private_key_here

# Oracle RPC URL (usually same as network RPC)
ORACLE_RPC_URL=https://testnet.era.zksync.dev

# Oracle update frequency (in seconds)
ORACLE_UPDATE_INTERVAL=3600

# Oracle consensus threshold (minimum number of agreeing nodes)
ORACLE_CONSENSUS_THRESHOLD=2

# Oracle deviation threshold (maximum allowed deviation between nodes)
ORACLE_DEVIATION_THRESHOLD=500

# Oracle node addresses (for multi-node consensus)
ORACLE_NODE_1_ADDRESS=0x0000000000000000000000000000000000000000
ORACLE_NODE_2_ADDRESS=0x0000000000000000000000000000000000000000
ORACLE_NODE_3_ADDRESS=0x0000000000000000000000000000000000000000

# Oracle consensus configuration
ORACLE_MIN_NODES=3
ORACLE_MAX_DEVIATION=500
ORACLE_SUBMISSION_WINDOW=300

# =============================================================================
# EXTERNAL API ENDPOINTS
# =============================================================================

# Economic data APIs
EUROSTAT_API_URL=https://ec.europa.eu/eurostat/api/dissemination/statistics/1.0/data/
OECD_API_URL=https://stats.oecd.org/restsdmx/sdmx.ashx/GetData/

