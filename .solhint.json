{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "max-line-length": ["error", 120],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "no-console": "warn",
    "explicit-types": "warn",
    "private-vars-underscore": "warn",
    "payable-fallback": "warn",
    "contract-name-capwords": "warn",
    "func-visibility": "warn",
    "no-empty-blocks": "warn",
    "no-inline-assembly": "warn",
    "not-rely-on-time": "warn",
    "not-rely-on-block-hash": "warn",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "compiler-version": ["error", "^0.8.20"],
    "func-param-name-mixedcase": "warn",
    "func-name-mixedcase": "warn",
    "var-name-mixedcase": "warn",
    "event-name-camelcase": "warn",
    "const-name-snakecase": "warn",
    "contract-name-camelcase": "warn",
    "ordering": "warn",
    "visibility-modifier-order": "warn",
    "no-global-import": "off",
    "imports-on-top": "warn",
    "no-unused-vars": "warn",
    "code-complexity": "warn",
    "function-max-lines": "warn",
    "no-complex-fallback": "warn",
    "no-low-level-calls": "warn",
    "no-multiple-inheritance": "warn",
    "no-return": "warn",
    "no-throw": "warn",
    "reentrancy": "error",
    "state-visibility": "warn",
    "use-forbidden-name": "warn",
    "gas-custom-errors": "warn",
    "immutable-vars-naming": "warn",
    "reason-string": "warn",
    "max-states-count": "warn"
  }
} 