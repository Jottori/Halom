{
	"name": "Halom Protocol Dev Environment",
	// Use a universal image that includes both Node.js and Python runtimes
	"image": "mcr.microsoft.com/devcontainers/universal:2",

	"features": {
		// Ensure Node.js v18 is installed
		"ghcr.io/devcontainers/features/node:1": {
			"version": "18"
		},
		// Ensure Python v3.9 is installed
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.9"
		}
	},

	// Forward the Hardhat node port
	"forwardPorts": [8545],
	"portsAttributes": {
		"8545": {
			"label": "Hardhat Node",
			"onAutoForward": "openPreview"
		}
	},

	// Run dependency installation after the codespace is created
	"postCreateCommand": "npm install && pip install --no-cache-dir -r requirements.txt",

	// Customize VS Code settings and install recommended extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"NomicFoundation.hardhat-solidity",
				"ms-python.python",
				"esbenp.prettier-vscode",
				"GitHub.copilot"
			]
		}
	}
} 